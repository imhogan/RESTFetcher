            <answer>Mr</answer>
            <answer>Mrs</answer>
            <answer>Ms</answer>
        </question>
        <question type='NAME' time='10' _required='true' text="Please enter the first resident's name."/>
        <question type='EMAIL' time='10' _required='true' text="Please enter the first resident's email address."/>
        <question type="YES_NO" time='2' _required='true' text='Is there a second resident?'>
            <answer>Yes
                <route>
                    <question type='SINGLE_CHOICE' time='10' _required='true' text='What is the preferred salutation for the second resident?' otherField='true'>
                        <answer>Dr</answer>
                        <answer>Mr</answer>
                        <answer>Mrs</answer>
                        <answer>Ms</answer>
                    </question>
                    <question type='NAME' time='10' _required='true' text="Please enter the first resident's name."/>
                    <question type='EMAIL' time='10' _required='true' text="Please enter the second resident's email address."/>
                    <question type="YES_NO" time='2' _required='true' text='Is there a third resident?'>
                        <answer>Yes
                            <route>
                                <question type='SINGLE_CHOICE' time='10' _required='true' text='What is the preferred salutation for the third resident?' otherField='true'>
                                    <answer>Dr</answer>
                                    <answer>Mr</answer>
                                    <answer>Mrs</answer>
                                    <answer>Ms</answer>
                                </question>
                                <question type='NAME' time='10' _required='true' text="Please enter the third resident's name."/>
                                <question type='EMAIL' time='10' _required='true' text="Please enter the first resident's email address."/>
                            </route>
                        </answer>
                        <answer>No</answer>
                    </question>
                </route>
            </answer>
            <answer>No</answer>
        </question>
        <question type='LONGTEXT' time='30' _required='false' text="Please enter any additional welcome notes."/>
    </questions>
</qrvey>
