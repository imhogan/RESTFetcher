    </settings>
    <questions>
        <question type='NUMERIC' time='3' _required='true' text='Please enter the unit number for the new resident(s).' allowDecimals='false' hasMinMax='true' min='1' max='500' numberType='Number'/>
        <question type='SINGLE_CHOICE' time='10' _required='true' text='What is the preferred salutation for the first resident?' otherField='true'>
